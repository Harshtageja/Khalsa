<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">*@

    <title>Hello, world!</title>
    <style>
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            border: none;
        }

            .button:hover {
                background-color: #3e8e41;
            }

            .button:active {
                background-color: #3e8e41;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        .count {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #3e8e41 border-radius: 5px;
            font-size: 16px;
            text-align: center;
            margin: -0.5rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="SearchingPage">MedicalStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="User" asp-action="ShowMeCart">My Cart</a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="User" asp-action="MyOrders">My Orders</a>
                    </li>

                </ul>
                <form class="d-flex">

                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">  <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogOut" style="text-decoration:none">Log Out</a></button>
                </form>
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-5"></div>
        <div class="col-6 m-3">


            <input type="text" placeholder="Search..." id="search" oninput="Users.Searchitem()">
            <button type="submit" style="margin-left:-1.5rem"><i class="fa fa-search"></i></button>
        </div>

    </div>

    <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Medicine</th>
                    <th scope="col">Status</th>
                    <th scope="col">Price</th>
                    <th scope="col">View Details</th>

                </tr>
            </thead>
            <tbody id="tableData">

            </tbody>
            </table>
 
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    This is a medicine Description<br />
                    <img src="/image/four.png" style="height:200px;width:200px" />
                    <div style="background-color:#4CAF50;width: 15%;display:inline">
                        <button id="decrement" class="button">-</button>
                        <div id="count" class="count">0</div>
                        <button id="increment" class="button">+</button>
                    </div>
                </div>
                
                <input type="text" id="MedicineID" hidden/>
                <input type="text" id="UnitPrice" hidden />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="$('#exampleModal').modal('hide');">Close</button>
                    <button type="button" class="btn btn-primary" onclick="Users.AddtoCart()">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>*@
    <script src="@Url.Content("~/Users.js")"></script>
    <script>
        // Get the increment, decrement, and count elements
        const incrementBtn = document.getElementById("increment");
        const decrementBtn = document.getElementById("decrement");
        const countEl = document.getElementById("count");

        // Set the initial count value
        let count = 0;

        // Add an event listener to the increment button
        incrementBtn.addEventListener("click", function () {
            count = countEl.innerText;
            count++;
            countEl.innerText = count;
        });

        // Add an event listener to the decrement button
        decrementBtn.addEventListener("click", function () {
            count = countEl.innerText;
            if (count > 0)
                count--;
            countEl.innerText = count;
        });
    </script>
</body>
</html>